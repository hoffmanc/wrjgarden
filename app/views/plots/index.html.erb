<h1>Listing plots</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Location</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plots.each do |plot| %>
  <tr>
    <td><%= plot.number %></td>
    <td><%= plot.name %></td>
    <td><%= plot.location %></td>
    <td><%= plot.email %></td>
    <td><%= link_to 'Show', plot %></td>
    <td><%= link_to 'Edit', edit_plot_path(plot) %></td>
    <td><%= link_to 'Destroy', plot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

